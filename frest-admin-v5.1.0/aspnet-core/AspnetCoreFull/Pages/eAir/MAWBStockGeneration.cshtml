@page
@model AspnetCoreFull.Pages.eAir.MAWBStockGenerationJobModel
@{
    ViewData["Title"] = "MAWB Stock Generation";
}

<h4 class="fw-bold py-3 mb-4">
  <span class="text-muted fw-light">eAir /</span> @ViewData["Title"]
</h4>
<div class="tab-pane fade show active p-3" id="mawb-stock-detail" role="tabpanel">
    <div class="card">
        <div class="card-body" >

            <!-- Top Title and Filter Section -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="mb-0">MAWB Stock Detail</h5>
                <div class="d-flex align-items-center gap-2">
                    <label for="display-stock-details-for" class="form-label mb-0 me-2">Display Stock Details for</label>
                    <input type="text" id="display-stock-details-for" class="form-control form-control-sm" style="width: 200px;">
                    <button class="btn btn-primary btn-sm">Get Details</button>
                </div>
            </div>

            <!-- Main Stock Detail Grid -->
            <div class="table-responsive mb-3" style="max-height: 400px; overflow: auto;">
                <table class="table table-bordered table-sm" style="min-width: 1400px;">
                    <thead class="text-center table-light" style="position: sticky; top: -1px; z-index: 1;">
                        <tr>
                            <th>SNo</th>
                            <th>Carrier Name</th>
                            <th>POR</th>
                            <th>Carrier No</th>
                            <th>MAWB</th>
                            <th>Chk Digit</th>
                            <th>MAWB No</th>
                            <th>Segment</th>
                            <th>Job No</th>
                            <th>Status</th>
                            <th>Note</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Repeat this row for each stock item -->
                        <tr>
                            <td><input type="text" class="form-control form-control-sm" readonly></td>
                            <td><input type="text" class="form-control form-control-sm"></td>
                            <td><input type="text" class="form-control form-control-sm"></td>
                            <td><input type="text" class="form-control form-control-sm"></td>
                            <td><input type="text" class="form-control form-control-sm"></td>
                            <td><input type="text" class="form-control form-control-sm"></td>
                            <td><input type="text" class="form-control form-control-sm"></td>
                            <td><input type="text" class="form-control form-control-sm"></td>
                            <td>
                                <div class="input-group input-group-sm">
                                    <input type="text" class="form-control">
                                    <button class="btn btn-light border" type="button">...</button>
                                </div>
                            </td>
                            <td><input type="text" class="form-control form-control-sm" readonly></td>
                            <td><input type="text" class="form-control form-control-sm"></td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-outline-success p-0 px-1 border-0"><i class="bi bi-pencil-square"></i></button>
                                <button class="btn btn-sm btn-outline-danger p-0 px-1 border-0"><i class="bi bi-x-circle"></i></button>
                            </td>
                        </tr>
                        <!-- Example Row 2 -->
                        <tr>
                            <td><input type="text" class="form-control form-control-sm" readonly></td>
                            <td><input type="text" class="form-control form-control-sm"></td>
                            <td><input type="text" class="form-control form-control-sm"></td>
                            <td><input type="text" class="form-control form-control-sm"></td>
                            <td><input type="text" class="form-control form-control-sm"></td>
                            <td><input type="text" class="form-control form-control-sm"></td>
                            <td><input type="text" class="form-control form-control-sm"></td>
                            <td><input type="text" class="form-control form-control-sm"></td>
                            <td>
                                <div class="input-group input-group-sm">
                                    <input type="text" class="form-control">
                                    <button class="btn btn-light border" type="button">...</button>
                                </div>
                            </td>
                            <td><input type="text" class="form-control form-control-sm" readonly></td>
                            <td><input type="text" class="form-control form-control-sm"></td>
                             <td class="text-center">
                                <button class="btn btn-sm btn-outline-success p-0 px-1 border-0"><i class="bi bi-pencil-square"></i></button>
                                <button class="btn btn-sm btn-outline-danger p-0 px-1 border-0"><i class="bi bi-x-circle"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Co Loader Input -->
            <div class="row align-items-center mb-3">
                <label for="co-loader-main" class="col-auto col-form-label">Co Loader</label>
                <div class="col-md-4">
                    <input type="text" id="co-loader-main" class="form-control form-control-sm">
                </div>
            </div>

            <!-- Bottom Generation Section -->
            <div class="row g-3">
                <!-- Left: MAWB Stock Generation -->
                <div class="col-lg-5">
                    <fieldset class="border p-3 h-100">
                        <legend class="float-none w-auto px-2 fs-6">MAWB Stock Generation</legend>
                        <div class="row mb-2 align-items-center">
                            <label class="col-md-4 col-form-label col-form-label-sm text-md-end">SNo</label>
                            <div class="col-md-8"><input type="text" class="form-control form-control-sm" readonly></div>
                        </div>
                         <div class="row mb-2 align-items-center">
                            <label class="col-md-4 col-form-label col-form-label-sm text-md-end"><span class="text-danger">*</span>Carrier</label>
                            <div class="col-md-8"><input type="text" class="form-control form-control-sm"></div>
                        </div>
                         <div class="row mb-2 align-items-center">
                            <label class="col-md-4 col-form-label col-form-label-sm text-md-end">Carrier Ref. No.</label>
                            <div class="col-md-8"><input type="text" class="form-control form-control-sm"></div>
                        </div>
                         <div class="row mb-2 align-items-center">
                            <label class="col-md-4 col-form-label col-form-label-sm text-md-end"><span class="text-danger">*</span>Received Date</label>
                            <div class="col-md-8"><input type="date" class="form-control form-control-sm"></div>
                        </div>
                         <div class="row mb-2 align-items-center">
                            <label class="col-md-4 col-form-label col-form-label-sm text-md-end"><span class="text-danger">*</span>POR</label>
                            <div class="col-md-8"><input type="text" class="form-control form-control-sm"></div>
                        </div>
                         <div class="row mb-2 align-items-center">
                            <label class="col-md-4 col-form-label col-form-label-sm text-md-end">Co Loader</label>
                            <div class="col-md-8"><input type="text" class="form-control form-control-sm"></div>
                        </div>
                         <div class="row">
                            <label class="col-md-4 col-form-label col-form-label-sm text-md-end">Note</label>
                            <div class="col-md-8"><textarea class="form-control form-control-sm" rows="2"></textarea></div>
                        </div>
                    </fieldset>
                </div>

                <!-- Middle: Total Stock -->
                <div class="col-lg-2 d-flex flex-column justify-content-center align-items-center">

    <button type="button" class="btn btn-primary btn-sm w-100" style="max-width:120px;">
        Total Stock
    </button>
</div>


                <!-- Right: MAWB Stock -->
                <div class="col-lg-5">
                    <fieldset class="border p-3 h-100">
                        <legend class="float-none w-auto px-2 fs-6">MAWB Stock</legend>
                        <div class="row mb-2 align-items-center">
                            <label class="col-md-4 col-form-label col-form-label-sm text-md-end"><span class="text-danger">*</span>Starting No</label>
                            <div class="col-md-8"><input type="text" class="form-control form-control-sm"></div>
                        </div>
                        <div class="row mb-2 align-items-center">
                            <label class="col-md-4 col-form-label col-form-label-sm text-md-end"><span class="text-danger">*</span>Ending No</label>
                            <div class="col-md-8"><input type="text" class="form-control form-control-sm"></div>
                        </div>
                        <div class="row mb-3 align-items-center">
                            <label class="col-md-4 col-form-label col-form-label-sm text-md-end">Warning Level</label>
                            <div class="col-md-8"><input type="text" class="form-control form-control-sm"></div>
                        </div>
                         <div class="row">
                            <div class="col-md-8 offset-md-4">
                               <button class="btn btn-primary btn-sm">Generate</button>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Bootstrap Icons CSS to your project for the icons to appear -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
