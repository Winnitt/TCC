@page
@model AspnetCoreFull.Pages.eAir.MAWBCorrectorJobModel
@{
    ViewData["Title"] = "MAWB Stock Generation";
}

<h4 class="fw-bold py-3 mb-4">
  <span class="text-muted fw-light">eAir /</span> @ViewData["Title"]
</h4>
<div class="tab-pane fade show active p-3" id="mawb-corrector" role="tabpanel">
    <div class="card">
        <div class="card-body" >

            <!-- Top Section: Corrector and Retrieve -->
            <div class="row g-3 mb-3">
                <!-- Left: MAWB Corrector -->
                <div class="col-lg-7">
                    <fieldset class="border p-3 h-100">
                        <legend class="float-none w-auto px-2 fs-6">MAWB Corrector</legend>
                        <div class="row g-2 align-items-center mb-2">
                            <label class="col-md-3 col-form-label col-form-label-sm text-md-end">Corrector No</label>
                            <div class="col-md-9"><input type="text" class="form-control form-control-sm"></div>
                        </div>
                        <div class="row g-2 align-items-center mb-2">
                            <label class="col-md-3 col-form-label col-form-label-sm text-md-end">Job</label>
                            <div class="col-md-9">
                                <div class="input-group input-group-sm">
                                    <input type="text" class="form-control">
                                    <input type="text" class="form-control">
                                    <button class="btn btn-light border" type="button">...</button>
                                </div>
                            </div>
                        </div>
                        <div class="row g-2 align-items-center">
                            <label class="col-md-3 col-form-label col-form-label-sm text-md-end">Corrector Executed Date</label>
                            <div class="col-md-9"><input type="date" class="form-control form-control-sm"></div>
                        </div>
                    </fieldset>
                </div>
                <!-- Right: Retrieve Job Details -->
                <div class="col-lg-5">
                    <fieldset class="border p-3 h-100">
                        <legend class="float-none w-auto px-2 fs-6">Retrieve Job Details</legend>
                        <div class="row g-3">
                            <div class="col-md-8">
                                <div class="row g-2 align-items-center mb-2">
                                    <label class="col-md-4 col-form-label col-form-label-sm text-md-end"><span class="text-danger">*</span> Job</label>
                                    <div class="col-md-8"><input type="text" class="form-control form-control-sm"></div>
                                </div>
                                <div class="row g-2 align-items-center">
                                    <label class="col-md-4 col-form-label col-form-label-sm text-md-end">MAWB</label>
                                    <div class="col-md-8"><input type="text" class="form-control form-control-sm"></div>
                                </div>
                            </div>
                            <div class="col-md-4 d-flex flex-column gap-2">
                                <button class="btn btn-primary btn-sm w-100">Get</button>
                                <button class="btn btn-secondary btn-sm w-100">Execute</button>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>

            <!-- "Now Reads" Section -->
            <fieldset class="border p-3 mb-3">
                <legend class="float-none w-auto px-2 fs-6">Now Reads</legend>
                <div class="row g-3">
                    <div class="col-lg-3">
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-4 col-form-label-sm">MAWB</label><div class="col-sm-8"><input type="text" class="form-control form-control-sm"></div></div>
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-4 col-form-label-sm">Carrier</label><div class="col-sm-8"><input type="text" class="form-control form-control-sm"></div></div>
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-4 col-form-label-sm">POR</label><div class="col-sm-8"><input type="text" class="form-control form-control-sm"></div></div>
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-4 col-form-label-sm">POL</label><div class="col-sm-8"><input type="text" class="form-control form-control-sm"></div></div>
                    </div>
                    <div class="col-lg-5">
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-2 col-form-label-sm text-end">Freight</label><div class="col-sm-4"><input type="text" class="form-control form-control-sm"></div><label class="col-sm-1 col-form-label-sm text-end">ETD</label><div class="col-sm-2"><input type="text" class="form-control form-control-sm"></div><label class="col-sm-1 col-form-label-sm text-end">ATD</label><div class="col-sm-2"><input type="text" class="form-control form-control-sm"></div></div>
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-2 col-form-label-sm text-end">Flight No</label><div class="col-sm-4"><input type="text" class="form-control form-control-sm"></div><label class="col-sm-1 col-form-label-sm text-end">ETA</label><div class="col-sm-2"><input type="text" class="form-control form-control-sm"></div><label class="col-sm-1 col-form-label-sm text-end">ATA</label><div class="col-sm-2"><input type="text" class="form-control form-control-sm"></div></div>
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-2 col-form-label-sm text-end">POD</label><div class="col-sm-10"><input type="text" class="form-control form-control-sm"></div></div>
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-2 col-form-label-sm text-end">FDC</label><div class="col-sm-10"><input type="text" class="form-control form-control-sm"></div></div>
                    </div>
                    <div class="col-lg-4">
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-4 col-form-label-sm text-end">Pieces</label><div class="col-sm-8"><input type="text" class="form-control form-control-sm"></div></div>
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-4 col-form-label-sm text-end">Weight</label><div class="col-sm-8"><input type="text" class="form-control form-control-sm"></div></div>
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-4 col-form-label-sm text-end">Volume</label><div class="col-sm-8"><input type="text" class="form-control form-control-sm"></div></div>
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-4 col-form-label-sm text-end">Volume Weight</label><div class="col-sm-8"><input type="text" class="form-control form-control-sm"></div></div>
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-4 col-form-label-sm text-end">Char. Weight</label><div class="col-sm-8"><input type="text" class="form-control form-control-sm"></div></div>
                    </div>
                </div>
                <fieldset class="border p-2 mt-2">
                    <legend class="float-none w-auto px-2 fs-6">Connection Details</legend>
                    <div class="table-responsive" style="max-height: 150px; overflow-y: auto;"><table class="table table-bordered table-sm"><thead><tr class="text-center"><th>SNo</th><th>Move</th><th>POL</th><th>POD</th><th>ETD</th><th>ETA</th><th>Vessel/Carrier</th><th>Voy/Flt No.</th><th>Status</th><th>CFS ETA</th><th>Note</th></tr></thead><tbody><tr><td><input class="form-control form-control-sm"></td><td><input class="form-control form-control-sm"></td><td><input class="form-control form-control-sm"></td><td><input class="form-control form-control-sm"></td><td><input class="form-control form-control-sm"></td><td><input class="form-control form-control-sm"></td><td><input class="form-control form-control-sm"></td><td><input class="form-control form-control-sm"></td><td><input class="form-control form-control-sm"></td><td><input class="form-control form-control-sm"></td><td><input class="form-control form-control-sm"></td></tr></tbody></table></div>
                </fieldset>
            </fieldset>

            <!-- "Should Read" Section -->
            <fieldset class="border p-3">
                <legend class="float-none w-auto px-2 fs-6">Should Read</legend>
                <div class="row g-3">
                    <div class="col-lg-3">
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-4 col-form-label-sm">MAWB</label><div class="col-sm-8"><div class="input-group input-group-sm"><input type="text" class="form-control"><button class="btn btn-success btn-sm" type="button"><i class="bi bi-arrow-repeat"></i></button></div></div></div>
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-4 col-form-label-sm">Carrier</label><div class="col-sm-8"><input type="text" class="form-control form-control-sm"></div></div>
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-4 col-form-label-sm">POR</label><div class="col-sm-8"><input type="text" class="form-control form-control-sm"></div></div>
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-4 col-form-label-sm">POL</label><div class="col-sm-8"><input type="text" class="form-control form-control-sm"></div></div>
                    </div>
                     <div class="col-lg-5">
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-2 col-form-label-sm text-end">Freight</label><div class="col-sm-4"><select class="form-select form-select-sm"></select></div><label class="col-sm-1 col-form-label-sm text-end">ETD</label><div class="col-sm-2"><input type="text" class="form-control form-control-sm"></div><label class="col-sm-1 col-form-label-sm text-end">ATD</label><div class="col-sm-2"><input type="text" class="form-control form-control-sm"></div></div>
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-2 col-form-label-sm text-end">Flight No</label><div class="col-sm-4"><input type="text" class="form-control form-control-sm"></div><label class="col-sm-1 col-form-label-sm text-end">ETA</label><div class="col-sm-2"><input type="text" class="form-control form-control-sm"></div><label class="col-sm-1 col-form-label-sm text-end">ATA</label><div class="col-sm-2"><input type="text" class="form-control form-control-sm"></div></div>
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-2 col-form-label-sm text-end">POD</label><div class="col-sm-10"><input type="text" class="form-control form-control-sm"></div></div>
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-2 col-form-label-sm text-end">FDC</label><div class="col-sm-10"><input type="text" class="form-control form-control-sm"></div></div>
                    </div>
                     <div class="col-lg-4">
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-4 col-form-label-sm text-end">Pieces</label><div class="col-sm-8"><input type="text" class="form-control form-control-sm"></div></div>
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-4 col-form-label-sm text-end">Weight</label><div class="col-sm-8"><input type="text" class="form-control form-control-sm"></div></div>
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-4 col-form-label-sm text-end">Volume</label><div class="col-sm-8"><input type="text" class="form-control form-control-sm"></div></div>
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-4 col-form-label-sm text-end">Volume Weight</label><div class="col-sm-8"><input type="text" class="form-control form-control-sm"></div></div>
                        <div class="row g-2 align-items-center mb-1"><label class="col-sm-4 col-form-label-sm text-end">Char. Weight</label><div class="col-sm-8"><input type="text" class="form-control form-control-sm"></div></div>
                    </div>
                </div>
                <fieldset class="border p-2 mt-2">
                    <legend class="float-none w-auto px-2 fs-6">Connection Details</legend>
                    <div class="table-responsive" style="max-height: 150px; overflow-y: auto;"><table class="table table-bordered table-sm"><thead><tr class="text-center"><th>SNo</th><th>Move</th><th>POL</th><th>POD</th><th>ETD</th><th>ETA</th><th>Vessel/Carrier</th><th>Voy/Flt No.</th><th>Status</th><th>CFS ETA</th><th>Note</th></tr></thead><tbody><tr><td><input class="form-control form-control-sm"></td><td><input class="form-control form-control-sm"></td><td><input class="form-control form-control-sm"></td><td><input class="form-control form-control-sm"></td><td><input class="form-control form-control-sm"></td><td><input class="form-control form-control-sm"></td><td><input class="form-control form-control-sm"></td><td><input class="form-control form-control-sm"></td><td><select class="form-select form-select-sm"></select></td><td><input class="form-control form-control-sm"></td><td><input class="form-control form-control-sm"></td></tr></tbody></table></div>
                </fieldset>
            </fieldset>

        </div>
    </div>
</div>

